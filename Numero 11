#include <stdio.h>
//Faça uma função que receba um número positivo e imprima todos os seus divisores.
//Exemplo: os divisores do número 66 são: 1, 2, 3, 6, 11, 22, 33 e 66.

void imprimir_divisores(int numero) {
    if (numero <= 0) {
        printf("O numero deve ser positivo.\n");
        return;
    }

    printf("Os divisores do numero %d sao: ", numero);

    for (int i = 1; i <= numero; i++) {
        if (numero % i == 0) {
            printf("%d", i);
            if (i < numero) {
                printf(", ");
            }
        }
    }

    printf("\n");
}

int main() {
    int num;

    printf("Informe um numero positivo: ");
    scanf("%d", &num);

    imprimir_divisores(num);

    return 0;
}
