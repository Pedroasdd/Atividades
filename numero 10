//Faça uma função capaz de receber dois números a e b, onde o primeiro sempre é menor
//que o segundo, e calcula a soma dos números pares compreendidos entre os dois números
//lidos.
#include<stdio.h>

int menor_numero(int a, int b){

    int soma = 0;
    if (a % 2 != 0){
        a++;
    }
    for (int i = a; i < b; i+= 2){
        soma +=1;
    }
    return soma;
}

int main() {
    int num1, num2;

    do{
    scanf("%d", &num1);
    scanf("%d", &num2);
        if (num1 >= num2) {
            printf("Erro: O primeiro numero deve ser menor que o segundo.\n");
        }
    }while (num1 >= num2);
    int resultado = menor_numero(num1, num2);
    printf("A soma dos números pares entre %d e %d e: %d\n", num1, num2, resultado);

    return 0;
}
